\long\def\vendnote#1{\global\setbox\endnotebox=
   \vbox{\parindent=10pt\endnotefont\unvbox\endnotebox\bgroup
   #1\ignorespaces\futurelet\next\aftergroup\no@te\relax}}

\long\def\no@te{\ifcat\bgroup\noexpand\next \let\next\n@@te
  \else\let\next\n@t\fi \next}
\long\def\n@@te{\bgroup\aftergroup\@endnote\let\next}
